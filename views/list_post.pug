div.wsp 
 div.left
  each post, i in posts
   div.Card 
     div.card_image
      img.card_img(src=post.frontmatter.img)
     div.cardtoptitle
       h3 #{post.frontmatter.title}
     div.cardtopsubtitle
       | by #{post.frontmatter.author.name} - #{post.frontmatter.author.bio}
     div.cardheader
       | Category
     div.cardcategory
       each category, i in post.frontmatter.categories
         a.btn(href="/category/" +category) #{category}
     div.cardsummary
      p #{post.frontmatter.summary}
     div.cardfooter
      | Tags
     div.cardtags
      each tag, i in post.frontmatter.tags
         a.btn(href="/tag/" +tag) #{tag}
 div.right
